# Application
NODE_ENV=development
APP_PORT=3000
APP_NAME=EduNode

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=edunode_db

# Database - MongoDB
MONGODB_URI=mongodb://localhost:27017/edunode_logs

# Cache - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Message Queue - RabbitMQ
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_QUEUE_NAME=edunode_queue

# Storage - MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=edunode-files
MINIO_USE_SSL=false

# JWT
JWT_SECRET=secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=secret
JWT_REFRESH_EXPIRES_IN=7d
